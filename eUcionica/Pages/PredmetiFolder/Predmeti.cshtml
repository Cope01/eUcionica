@page
@model eUcionica.Pages.PredmetiFolder.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Predmeti</h1>

<p>
    <a asp-page="Create" class="btn btn-outline-dark">Napravi novi predmet</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Predmeti[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Predmeti) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-outline-dark">Prepravi</a>
                    <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-outline-dark">Izbrisi</a>
                    <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-outline-dark">Detalji</a>
                </td>
        </tr>
}
    </tbody>
</table>
