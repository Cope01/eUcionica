@page
@model eUcionica.Pages.PredmetiFolder.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Prepravi</h1>

<h4>Predmeti</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Predmeti.ID" />
            <div class="form-group">
                <label asp-for="Predmeti.Name" class="control-label"></label>
                <input asp-for="Predmeti.Name" class="form-control" />
                <span asp-validation-for="Predmeti.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sacuvaj" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Predmeti">Nazad na predmete</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
